<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | مدیریت جاب جو</title>
    <link href="~/assets/summernote/summernote.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="container">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">جاب جو</a>
                </div>
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index", "Home")">
                            <span class="fa fa-home"></span>
                        </a>
                    </li>
                    <li><a href="@Url.Action("Index", "Companies")">مدیریت شرکت ها</a></li>
                    <li><a href="@Url.Action("Index", "Jobs")">مدیریت مشاغل</a></li>
                    <li><a href="@Url.Action("Index", "Users")">مدیریت کاربران</a></li>
                    <li><a href="@Url.Action("Index", "Resumes")">مدیریت رزومه ها</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <a href="#">
                            مدیریت
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span class="fa fa-power-off"></span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container" id="wrapper">
        <div class="row">
            <main class="col-md-12">
                @if (!string.IsNullOrEmpty(TempData["Message"]?.ToString()))
                {
                    <div class="alert alert-@(TempData["MessageClass"]??"success")">
                        @TempData["Message"]
                    </div>
                }

                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                &copy;
                تمامی حقوق این سیستم متعلق به ماست!
            </div>
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/assets/summernote/summernote.js"></script>
    <script>
        $(function () {
            $('textarea').summernote();
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
